{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-console": 2,
    "semi": [2, "always"],
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "require-atomic-updates": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
